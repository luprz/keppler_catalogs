.listing-show-header
	.actions
		- if can? :update, model
			= link_to edit_catalog_attachment_path(params[:catalog_id], @attachment), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light") 
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card
	%ul.list
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.id")
			.display-value= @attachment.id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.name")
			.display-value= @attachment.name
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.upload")
			.display-value= @attachment.upload
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.description")
			.display-value= @attachment.description
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.image")
			.display-value= @attachment.image
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.url")
			.display-value= @attachment.url
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.target")
			.display-value= @attachment.target
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.public")
			.display-value= @attachment.public
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.permalink")
			.display-value= @attachment.permalink
	

:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});