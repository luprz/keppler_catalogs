= title "Attachments | #{@attachment.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, model
				= link_to catalog_attachments_path(@attachment), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")	
			- if can? :update, model
				= link_to edit_catalog_attachment_path(@attachment), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to catalog_attachments_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark") 
		.card			
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @attachment.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.name")
					.display-value.fs-body-1.tc-black-2= @attachment.name.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.upload")
					.display-value.fs-body-1.tc-black-2= @attachment.upload.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.description")
					.display-value.fs-body-1.tc-black-2= @attachment.description.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.image")
					.display-value.fs-body-1.tc-black-2= @attachment.image.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.url")
					.display-value.fs-body-1.tc-black-2= @attachment.url.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.target")
					.display-value.fs-body-1.tc-black-2= @attachment.target.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.public")
					.display-value.fs-body-1.tc-black-2= @attachment.public.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.permalink")
					.display-value.fs-body-1.tc-black-2= @attachment.permalink.to_s.humanize
