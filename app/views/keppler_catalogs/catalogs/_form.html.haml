.wrapper
	.wrapper-body.container
		.actions
			= link_to catalogs_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				= simple_form_for @catalog do |f|
					.row
					
						= f.input :cover, :as => :file_material, label: false, wrapper_html: { class: "file-field" }
						= f.input :name								
						= f.input :description, :as => :ckeditor, label: false, input_html: { :ckeditor => { :toolbar => 'short'} }
						= f.input :section, label: false, collection: KepplerCatalogs.sections,include_blank: "- Selecciona una secci√≥n -", input_html: { class: "browser-default" }
						= f.input :public, as: :checkbox_material

						.form-actions.right
							= f.button :submit, "Guardar", class: "btn"
